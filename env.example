# Environment Variables for GeoWiki
# Copy this file to .env and fill in the values
#
# For development: cp env.example .env
# For production:  cp env.example .env.prod

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# Database password (required in production)
DATABASE_PASSWORD=your_secure_database_password_here

# Rails secret key base (required in production)
# Generate with one of these commands:
#   docker compose run --rm web bundle exec rails secret
#   docker run --rm ghcr.io/pdxhackerspace/geowiki:latest bundle exec rails secret
#   openssl rand -hex 64
SECRET_KEY_BASE=your_rails_secret_key_base_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

DATABASE_USER=postgres
DATABASE_NAME=geowiki_production
DATABASE_HOST=db

# Full database URL (alternative to individual settings)
# DATABASE_URL=postgresql://postgres:password@db:5432/geowiki_production

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Port to expose the application on
PORT=3000

# Rails environment
RAILS_ENV=development

# =============================================================================
# AUTHENTICATION - Authentik OAuth2 (optional)
# =============================================================================

# Authentik OAuth2 client credentials
# AUTHENTIK_CLIENT_ID=your_client_id_here
# AUTHENTIK_CLIENT_SECRET=your_client_secret_here
# AUTHENTIK_SITE=https://authentik.example.com

# =============================================================================
# AUTHENTICATION - Local Admin Account (optional)
# =============================================================================

# Local admin login credentials (bypasses OAuth)
LOCAL_ADMIN_EMAIL=admin@example.com
LOCAL_ADMIN_PASSWORD=your_secure_admin_password
LOCAL_ADMIN_NAME=Admin

# =============================================================================
# AUTHENTICATION - Local User Account (optional, non-admin)
# =============================================================================

# Local user login credentials (bypasses OAuth, non-admin)
# LOCAL_USER_EMAIL=user@example.com
# LOCAL_USER_PASSWORD=your_secure_user_password
# LOCAL_USER_NAME=User

