<% if current_user&.admin? && journable.journal_entries.any? %>
  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0"><i class="bi bi-journal-text"></i> Activity Journal</h5>
      <%= link_to "View All", journal_path, class: "btn btn-sm btn-outline-secondary" %>
    </div>
    <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
      <% journable.journal_entries.recent.limit(10).includes(:user).each do |entry| %>
        <div class="list-group-item py-2">
          <div class="d-flex w-100 justify-content-between align-items-center">
            <div>
              <span class="badge bg-<%= entry.action_color %> me-1">
                <i class="bi bi-<%= entry.action_icon %>"></i> <%= entry.action.capitalize %>
              </span>
              <% if entry.changes_made.present? && entry.action == "updated" %>
                <small class="text-muted">
                  (<%= entry.changes_made.keys.join(", ") %>)
                </small>
              <% end %>
            </div>
            <div class="text-end">
              <small class="text-muted">
                <%= time_ago_in_words(entry.created_at) %> ago
                by <strong><%= entry.user_name %></strong>
              </small>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

